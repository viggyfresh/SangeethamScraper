{
    "manifest_version": 2,

    "name": "SangeethapriyaScraper",

    "description": "I click, so you don't have to.",
    
    "version": "1.0",

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/jquery-2.1.1.min.js"]
        }
    ],

    "permissions": [
        "tabs",
        "background",
        "declarativeContent",
        "http://*/*",
        "https://*/*"
    ],
    
    "page_action": {
        "default_icon": "music.png",
        "default_popup": "scraper.html"
    }
}